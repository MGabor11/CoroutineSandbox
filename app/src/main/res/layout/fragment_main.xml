<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/toBasicExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic exmaple" />

        <Button
            android:id="@+id/toDatabaseExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="API call with database" />

        <Button
            android:id="@+id/toStateFlow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StateFlow" />

        <Button
            android:id="@+id/toScopePage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scopes" />

        <Button
            android:id="@+id/toErrorHandling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error handling" />

        <Button
            android:id="@+id/toSuspendFun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suspend fun page" />

    </LinearLayout>
</layout>
